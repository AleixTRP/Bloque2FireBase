<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ModuloDosFirebase" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/baseLight</item>
        <item name="colorPrimaryVariant">@color/lighterLight</item>
        <item name="colorOnPrimary">@color/baseGrey</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baseGrey</item>
        <item name="colorSecondaryVariant">@color/lighterGery</item>
        <item name="colorOnSecondary">@color/baseLight</item>
        <item name="android:textColorSecondary">?attr/colorSecondary</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/baseGrey</item>
        <item name="colorOnSurface">?attr/colorSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/baseGrey</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <!--Shadow Setup -->
        <item name="android:ambientShadowAlpha">0.7</item>
        <item name="android:spotShadowAlpha">0.7</item>

        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/ModuloDosFirebase.CardView</item>
        
        
    </style>
    
    <style name="ModuloDosFirebase.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/shadow_elevation</item>
    </style>
</resources>